<?xml version="1.0"?>
<gridcontrol>
    <grids>
        <productGrid>
            <entity_id>
                <remove/>
            </entity_id>

            <sku>
                <after>attribute_set_id</after>
            </sku>

            <test>
                <add>
                    <header>Test Column</header>
                    <type>options</type>
                    <options>
                        <option_1>
                            <key>1</key>
                            <value>ja</value>
                        </option_1>

                        <option_2>
                            <key>2</key>
                            <value>nein</value>
                        </option_2>
                    </options>
                    <index>status</index>
                </add>
                <after>attribute_set_id</after>
            </test>

            <short_description>
                <add>
                    <header>Short Desc</header>
                    <type>text</type>
                    <index>short_description</index>
                </add>
                <after>name</after>
            </short_description>

            <short_description2>
                <add>
                    <header>QTY</header>
                    <type>text</type>
                    <index>qty</index>
                    <!--<joinAttribute>status|catalog_product/status|entity_id||inner</joinAttribute>-->
                    <joinField>qty|cataloginventory/stock_item|qty|product_id=entity_id|{{table}}.stock_id=1|left</joinField>
                </add>
            </short_description2>
        </productGrid>

        <sales_order_grid>
            <real_order_id>
                <remove/>
            </real_order_id>

            <shipping_description>
                <add>
                    <header>Shipping Description</header>
                    <join_index>shipping_description</join_index>
                    <join>sales/order|main_table.entity_id=`sales/order`.entity_id|shipping_description</join>
                    <!--<filter_index>`sales/order`.shipping_description</filter_index>-->
                </add>
                <after>status</after>
            </shipping_description>
        </sales_order_grid>
    </grids>
</gridcontrol>