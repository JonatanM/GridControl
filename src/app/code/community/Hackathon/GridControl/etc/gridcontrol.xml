<?xml version="1.0"?>
<gridcontrol>
    <grids>
        <productGrid>
            <entity_id>
                <remove/>
            </entity_id>

            <sku>
                <after>attribute_set_id</after>
            </sku>

            <test>
                <add>
                    <header>Test Column</header>
                    <type>options</type>
                    <options>
                        <option_1>
                            <key>1</key>
                            <value>ja</value>
                        </option_1>

                        <option_2>
                            <key>2</key>
                            <value>nein</value>
                        </option_2>
                    </options>
                    <index>status</index>
                </add>
                <after>attribute_set_id</after>
            </test>

            <short_description>
                <add>
                    <header>Short Desc</header>
                    <type>text</type>
                    <index>short_description</index>
                </add>
                <after>name</after>
            </short_description>

            <short_description2>
                <add>
                    <header>QTY</header>
                    <type>text</type>
                    <index>qty</index>
                    <!--<joinAttribute>status|catalog_product/status|entity_id||inner</joinAttribute>-->
                    <!--  <joinField>qty|cataloginventory/stock_item|qty|product_id=entity_id|{{table}}.stock_id=1|left</joinField> -->
                    <!--<join table="cataloginventory/stock_item" condition="main_table.entity_id=`cataloginventory/stock_item`.product_id" field="qty"/>-->
                </add>
            </short_description2>
        </productGrid>

        <sales_order_grid>

            <address>
                <add>
                    <header>Billing Address</header>
                    <join table="sales/order_address" condition="main_table.entity_id={{table}}.parent_id" field="region" where="{{table}}.address_type|eq|billing" concat="region, city" alias="address" />
                </add>
							<after>grand_total</after>
            </address> 

        </sales_order_grid>
    </grids>
</gridcontrol>